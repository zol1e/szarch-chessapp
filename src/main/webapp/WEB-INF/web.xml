<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">

  <listener>
  	<listener-class>chessapp.server.ServerInitDestroyHandler</listener-class>
  </listener>

  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>chessapp.main.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>chessapp.authenticate.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>chessapp.authenticate.LogoutServlet</servlet-class>
  </servlet> 
  <servlet>
    <servlet-name>LoginPage</servlet-name>
    <jsp-file>/login.html</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>RegistrationPage</servlet-name>
    <jsp-file>/register.html</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>chessapp.authenticate.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Index</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>LoginServlet</url-pattern>   
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>RegisterServlet</url-pattern>   
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>LogoutServlet</url-pattern>   
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistrationPage</servlet-name>
    <url-pattern>/registration</url-pattern>   
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginPage</servlet-name>
    <url-pattern>/login</url-pattern>   
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/game00/index</url-pattern>  
  </servlet-mapping>
  
  <filter>
    <filter-name>Authfilter</filter-name> <!-- mandatory -->
    <filter-class>chessapp.authenticate.AuthFilter</filter-class> <!-- mandatory -->
  </filter>
  <filter-mapping>
    <filter-name>Authfilter</filter-name>
    <url-pattern>/game00/*</url-pattern>
  </filter-mapping>
  

     
     
     
  <servlet>
    <servlet-name>TestWebSocketServlet</servlet-name>
    <servlet-class>chessapp.main.TestWebSocketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestWebSocketServlet</servlet-name>
    <url-pattern>/game/websocket/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>game.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
